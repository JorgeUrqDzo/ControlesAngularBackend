@model webControles.Models.AreaProcesoModel


@using (Html.BeginForm("index", "AreaProceso", FormMethod.Post, new { @id="FrmCrear"}))
{
    @Html.AntiForgeryToken()
    
    <div class="panel">
        <div class="panel-body">
            <button type="button" id="btnCreateNuevo" class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span> Nuevo </button>
            <button type="button" id="btnCreateGuardar" class="btn btn-success hide"> <span class="glyphicon glyphicon-floppy-save"></span> Guardar</button>
            <button type="button" id="btnCreateCancelar" class="btn btn-danger hide"> <span class="glyphicon glyphicon-chevron-left"></span> Cancelar </button>
            <button type="button" id="btnCreateActivar" class="btn btn-info hide"> <span class="glyphicon glyphicon-check"></span> Activar </button>
            <br />
            <br />

            <div class="form-group">
                @Html.HiddenFor(model => model.IdAreaProceso, new { @Value = "0", id = "idCreateAreaProceso" })
                @Html.LabelFor(model => model.AreaProceso):
                @Html.TextBoxFor(model => model.AreaProceso, new { @id = "txtCreateAreaProceso", @class = "form-control", @Placeholder = "Nombre de Area de proceso", })
                @Html.ValidationMessageFor(model => model.AreaProceso, null, new { @class = "text-danger" })
            </div>
            <div class="form-group" id="divActivo" style="display:none">
                @Html.LabelFor(model => model.Activo)
                @Html.CheckBoxFor(model => model.Activo, new { @id = "chkCreateActivo", @class = "form-control" })
            </div>
        </div>
    </div>
}