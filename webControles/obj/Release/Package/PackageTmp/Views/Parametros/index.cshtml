@*@{
        ViewBag.Title = "Parametros";
    }*@
@model webControles.Models.Views.ParametrosViewModel
<div class="modal" id="ModalAltaParametros" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Alta de Parametros</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    @using (Html.BeginForm("index", "Parametros", FormMethod.Post, new { id = "frmParametros" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="col-lg-4">

                            @Html.HiddenFor(model => model.objParametrosModel.IdDetConfBandejaLinkParametro, new { @Value = "0", id = "IdDetConfBandejaLinkParametro" })

                            @Html.LabelFor(model => model.objParametrosModel.Parametro)
                            @Html.TextBoxFor(model => model.objParametrosModel.Parametro, new { @class = "form-control", @placeholder = "Nombre ", @id = "txtParametroNombre" })
                            @Html.ValidationMessageFor(model => model.objParametrosModel.Parametro, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-4">
                            @Html.LabelFor(model => model.objParametrosModel.IdTipoParametro)
                            @Html.DropDownListFor(model => model.objParametrosModel.IdTipoParametro, new SelectList(ViewBag.lstTipoParametro, "Llave", "Titulo"), new { @class = "form-control", @placeholder = "Tipo Parametro ", @id = "txtParametroTipo" })
                            @Html.ValidationMessageFor(model => model.objParametrosModel.IdTipoParametro, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-4">
                            @Html.LabelFor(model => model.objParametrosModel.Valor)
                            @Html.TextBoxFor(model => model.objParametrosModel.Valor, new { @class = "form-control", @placeholder = "Valor ", @id = "txtParametroValor" })
                            @Html.ValidationMessageFor(model => model.objParametrosModel.Valor, null, new { @class = "text-danger" })
                        </div>

                        <div class="col-lg-4">
                            <br />
                            @Html.LabelFor(model => model.objParametrosModel.IdTipoEnvioParametro)
                            @Html.DropDownListFor(model => model.objParametrosModel.IdTipoEnvioParametro, new SelectList(ViewBag.lstTipoEnvio, "Llave", "Titulo"), new { @class = "form-control", @placeholder = "TipoEnvio ", @id = "txtParametroTipoEnvio" })
                            @Html.ValidationMessageFor(model => model.objParametrosModel.IdTipoEnvioParametro, null, new { @class = "text-danger" })

                        </div>
                    }
                </div>

            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="button" id="btnParametroModalAceptar" class="btn btn-primary">Aceptar</button>
                    <button type="button" id="btnParametroModalCancelar" class="btn btn-danger" data-dismiss="modal">Cancelar</button>

                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
