    <div id="TablaLoad" class="loading loading-active" style="display: none;">
        <img src="~/img/loading-circle.gif" alt="Cargando" />
    </div>
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            Version 1.0
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2015 <a href="#">Nezter</a>.</strong> Todos los derechos reservados.
